<%- include('../partials/header') %>

<div class="newPostContainer">

  <div class="h1Container"><h2>Post Your Task</h2></div>

<!-- enctype="multipart/form-data"  this is for uploading images -->
<form action='/tasks' enctype="multipart/form-data"  method="post" class="row g-3"   >
  <div class="col-md-6">
    <label class="form-label">Title</label>
    <input type="text" name="title" required class="form-control" id="inputEmail4">
  </div>

  <div class="col-md-6">
    <label  class="form-label">Date</label>
    <input type="date" name="date" required class="form-control" id="inputPassword4">
  </div>

  <div class="col-12">
    <label for="inputAddress" class="form-label">Address</label>
    <input type="text" name="address" required class="form-control" id="inputAddress" placeholder="1234 Main St">
  </div>

   
  <div class="mb-3">
    <label class="form-label">Details</label>
    <textarea name="details" required class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>

  <div class="mb-3">
    <label class="form-label">Image</label>
    <input name="images" class="form-control" type="file" id="formFileMultiple" multiple>
  </div>

  <div class="col-12">
    <label class="form-label">Budget </label>
    <input type="number" name="budget" required class="form-control" id="inputAddress" placeholder="$">
  </div>

  <div class="col-12">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>

</div>


<%- include('../partials/footer') %>
