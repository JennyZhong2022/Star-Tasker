<%- include('../partials/header') %>

<section>
  <h1>Edit Task</h1>
  <form action="/tasks/<%= task._id %>?_method=PUT" method="POST">
    <div>
      <label>Title:</label>
      <input type="text"  name="title" value="<%= task.title %>" required>
    </div>


    <div>
      <label>Date:</label>
      <input type="date" name="date" value="<%= task.date.toISOString().split('T')[0] %>"  required> 
    </div>

    <div>
      <label>details:</label>
      <textarea  name="details"  required><%= task.details %></textarea> 
    </div>
  
    <div>
    <label>Budget:</label>
    <input type="number" name="budget" value="<%= task.budget %>" required> 
   </div>

    <div>
      <button type="submit">Save Changes</button>
    </div>
  </form>
</section>

<%- include('../partials/footer') %>
